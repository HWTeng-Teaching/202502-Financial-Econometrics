#(a)
library(dplyr)

# 建立第一差分變數
liquor_diff <- liquor5 %>%
  group_by(hh) %>%
  arrange(year) %>%
  mutate(
    LIQUORD = liquor - lag(liquor),
    INCOMED = income - lag(income)
  ) %>%
  filter(!is.na(LIQUORD))  # 去除第一期

# 回歸分析（不含截距）
model_a <- lm(LIQUORD ~ INCOMED - 1, data = liquor_diff)
summary(model_a)
confint(model_a, level = 0.95)  # 95%信賴區間


